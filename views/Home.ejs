    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand brand" href=""> <i class="fas fa-book fa-1x brand-icon"></i>Book <span class="title">Miejsce</span></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled">Disabled</a>
            </li> -->
          </ul>
          <form class="d-flex" role="search">
            <!-- <input class="form-control me-2" type="search" placeholder="Search For your Books" aria-label="Search">
            <button class="btn btn-outline-light" type="submit">Search</button> -->
            <button class="btn btn-outline-light" type="button" data-bs-toggle="modal"  data-bs-target="#signinModal">Sign in</button>
         </form>
        </div>
      </div>
    </nav>
  </header>
  <main>
   
    <div  class="homepage_image">
      <% if (msg.length>0) { %>
      <% for (e of msg) { %>
      <div class="alert alert-success alert-dismissible fade show reg-alert" role="alert">
       <%= e %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
    <% } %>
    <% } %>
    </div>
  </main>

  
<div class="modal fade" id="signinModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h3 class="title-signin">Sign in with email</h3>
          <% if (error.length>0) { %>
            <% for (e of error) { %>
            <div class="alert alert-warning alert-dismissible fade show " role="alert">
             <%= e %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
         </div>
          <% } %>
          <% } %>
          <form action="/api/login" method="post">
            <div class="row">
              <div class="col-lg-12 gap-between form-floating">
                
                <input type="email" name="email" class="form-control" id="email" placeholder="something@something" required>
                <label for="email" class="form-label">Email</label>
              </div>
              <div class="col-lg-12 gap-between form-floating">
              
              <input type="password" name="password" class="form-control" id="password" placeholder="give your password" minlength="6" required>
              <label for="password" class="form-label">Password</label>
              </div>
              <div class="col-lg-12 d-grid  gap-2 gap-between">
                <button type="submit" class="btn btn-lg btn-dark">Sign In</button>
              </div>
              
             
            </div>
            
          </form>
        </div>
        
        <div class="modal-footer">
          <form action="/lets/sign_up/" method="post">
            New to Book_Miejsce? <button type="submit" class="btn btn-light">Sign Up</button>
          </form>
          
        </div>
      </div>
    </div>
  </div>
 
 
    
    

  
 


