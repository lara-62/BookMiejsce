                  <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="#">Quote</a></li>
              </ul>
            </li>

          </ul>
          <form class="d-flex mx-auto searchBar" role="search" action="/Book-list" method="post">
            <input class=" search-input" type="search" placeholder="Search Books" aria-label="Search" name="search">
             
            <button class=" search-button" type="submit"><i class="fas fa-search"></i></button>
          </form>
        </div>
        <div class="dropdown mx-5 gap-between">
          <div class="profile dropdown-toggle mx-5" data-bs-toggle="dropdown" aria-expanded="false"
            id="profiledropdown">
            <img src="/image/default.jpg" class="profile-image" alt="">
          </div>
          <ul class="dropdown-menu " aria-labelledby="profiledropdown">
            <p style="text-align: center;"> <%= user.USER_NAME %></p>
            <hr>
            <li>
              <form action="">
                <button class="dropdown-item"> Profile</button>
              </form>
            </li>
            <li>
              <form action="">
                <button class="dropdown-item"> Friends</button>
              </form>
            </li>
            <li>
              <form action="/user-following" method="get">
                <button class="dropdown-item"> Following</button>
              </form>
            </li>
