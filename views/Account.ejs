            <li>
              <form action="">
                <button class="dropdown-item"> Account Settings</button>
              </form>
            </li>
            <li>
              <form action="">
                <button class="dropdown-item">Logout</button>
              </form>
            </li>

          </ul>
        </div>
    </nav>

    <!--cards-->
    <div class="container main">
      <p class="text-muted" style="font-size:1rem; text-align:center;">You currently have <%=bookcount[0].COUNT %> BOOK in your self</p>
      <div class="row">
        <div class="col-lg-4">
          <div class="container ">
            <div class="row gap-between container_divider">
              
              <div class="col-lg-12">
                <h5 class="reading_type">Currently Reading</h5>
                <% if (Reading.length>0 ){%>
                <div class="card border-0">
                  <div class="row">
                    <div class="col-md-4">
                      <img src="http://localhost:3000/image/Books/<%=Reading[0].IMAGE_URL%>" alt="" class="card-img start">
                    </div>
                    <div class="col-md-8">
                      <div class="card body border-0">

                        <h5 class="card-text book_name link_hover"><%=Reading[0].TITLE%></h5>

                        <p>

                           <span class="author_name link_hover"><%=Reading[0].AUTHOR_NAME%></span>


                        </p>
                        <p class="card-text"><small class="text-muted">Book added to self in <%=Reading[0].DATE_ADDED.toISOString().slice(0,10)%></small></p>

                      </div>
                    </div>
                  </div>
                </div>
                <%}  else{%>
                <p>No book to this self </p>
                <%}%>
                <p><a href="/Reading_book">view all books</a></p>
              </div>
              

             <hr>
              <div class="col-lg-12">
                <h5 class="reading_type">Read</h5>
                <% if (hasread.length>0 ){%>
                  <div class="card border-0">
                    <div class="row">
                      <div class="col-md-4">
                        <img src="http://localhost:3000/image/Books/<%=hasread[0].IMAGE_URL%>" alt="" class="card-img start">
                      </div>
                      <div class="col-md-8">
                        <div class="card body border-0">
  
                          <h5 class="card-text book_name link_hover"><%=hasread[0].TITLE%></h5>
  
                          <p>
  
                             <span class="author_name link_hover"><%=hasread[0].AUTHOR_NAME%></span>
  
  
                          </p>
                          <p class="card-text"><small class="text-muted">Book added to self in <%=hasread[0].DATE_ADDED.toISOString().slice(0,10)%></small></p>
  
                        </div>
                      </div>
                    </div>
                  </div>
                  <%}else{%>
                  <p>No book to this self </p>
                  <%}%>
                  <p><a href="/hasread_book">view all books</a></p>
              </div>
              <hr>
              <div class="col-lg-12">
                <h5 class="reading_type">Want to Read</h5>
                <% if (willread.length>0 ){%>
                  <div class="card border-0">
                    <div class="row">
                      <div class="col-md-4">
                        <img src="http://localhost:3000/image/Books/<%=willread[0].IMAGE_URL%>" alt="" class="card-img start">
                      </div>
                      <div class="col-md-8">
                        <div class="card body border-0">
  
                          <h5 class="card-text book_name link_hover"><%=willread[0].TITLE%></h5>
  
                          <p>
  
                             <span class="author_name link_hover"><%=willread[0].AUTHOR_NAME%></span>
  
  
                          </p>
                          <p class="card-text"><small class="text-muted">Book added to self in <%=willread[0].DATE_ADDED.toISOString().slice(0,10)%></small></p>
  
                        </div>
                      </div>
                    </div>
                  </div>
                  <%}else{%>
                  <p>No book to this self </p>
                  <%}%>
                  <p><a href="/willread_book">view all books</a></p>
              </div>
            </div>
          </div>


        </div>
        <div class="col-lg-4">
          
        </div>
        <div class="col-lg-4">
          <div class="container ">
            <div class="row gap-between container_divider">
              <div class="col-lg-12">
                <h5 class="reading_type">Recommendations</h5>
                <div class="card border-0">
                  <div class="row">
                    <div class="col-md-4">
                      <img src="/image/Book cover 3.jpg" alt="" class="card-img start">
                    </div>
                    <div class="col-md-8">
                      <div class="card body border-0">

                        <h5 class="card-text book_name link_hover">The Alchemist</h5>

                        <p>

                          by <span class="author_name link_hover">PAULO COLEHO</span>


                        </p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>

                      </div>
                    </div>
                  </div>
                </div>
                <br>
                <p> <button class="btn btn-dark" style="background-color: #023047;">Want to Read</button></p>
              </div>
             <hr>
             </div>
        </div>
      </div>
    </div>






















