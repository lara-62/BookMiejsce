            <% if(e.AUTHOR_ID===f.AUTHOR_ID){%>
            <span class="text-muted book_number"><%=f.COUNT%> books in this site</span>
            <%}%>
            <%}%>
            <br>
            <% for(g of follower_count){%>
            <% if(e.AUTHOR_ID===g.AUTHOR_ID){%>
            <span class="text-muted book_number">.<%=g.COUNT%> Followers</span>
            <%}%>
            <%}%>
            </div>
            <div class="author_follow2">
                <form action="/follow_author/<%=user.USER_ID%>/<%=e.AUTHOR_ID%>" method="post">
                 <button class="btn btn-success"type="submit">
                    Following..
                 </button>
                </form>
            </div>
        </div>
        
        <hr>
        <%}%>
        
